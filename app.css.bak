* {
  margin: 0;
  padding: 0;
  font-family: 'Manrope', sans-serif;
}

body {
  height: 100vh;
  width: 100vw;
}

/*TEXT EDITOR*/
#note-editor {
  /*align-items: center;*/
  width: 10%;
  height: 50vh;
  position: fixed;
  right: 10%;
  top: 10%;
  padding: 10px;
  max-width: 700px;
}
#editor {
  width: 100%;
  height: 100%;
  border: 1px solid rgb(231, 231, 231);
  border-radius: 10px;
}
#save-btn, #delete-btn {
  max-width: 200px;
  color: white;
  background-color: #9f51f8;
  padding: 15px 40px;
  margin: 30px;
  font-size: 20px;
  border-radius: 10px;
  border: none;
  cursor: pointer;
}

#save-btn:hover, #delete-btn:hover {
  background-color: #5f12b8; 
}
/* Contariner knappar till editor */
#container-btn {
  display: flex;
  justify-content: space-around;
  flex-direction: row;
  
}

/* Lista med Notes */

#saved-notes-list {
  margin: 10px;

}

.noteLi{
  padding: 10px;
  font-size: 20px;
}
.noteLi p{
  font-size: 12px;
  color: gray;
}

