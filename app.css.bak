#note-btns {
  list-style-type: none;
  margin-top: 100px;
  padding: 0;


}


#note-btns li {
  font-size: 20px;
  display: block;  
  padding: 5%;

}

#nav-options {
  background-color: whitesmoke;
  position: fixed;
  height: 100vh;
  padding: 5px;
  width: 8vw;
  
}
#logo{
  width: 85%;
  margin: 10px;
}

#search-container {
  position: fixed;
  height: 100vh;
  left: 15%;
  width: 15%;
  top: 100px;
}
#search-field{
  border-radius: 8px;
  border: 1px solid lightgrey;
  height: 30px;
}

/*FOOTER*/
footer {
  background-color: black;
  position: fixed;
  bottom:0;
  width:100%;
  height:70px;
  
}
footer p {
  padding: 20px;
  font-size: 14px;
  font-weight: 400;
  line-height: 24px;
  color: white;
  
}
